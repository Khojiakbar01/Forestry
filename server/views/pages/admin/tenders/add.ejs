<!doctype html>
<head>
    <script src="./scripts/tinymce_6.2.0/tinymce/js/tinymce/tinymce.min.js"></script>
    <script type="application/javascript" src="scripts/tinymce_6.2.0/tinymce/js/tinymce/tinymce.min.js"></script>

</head>

<body>

<div class="admin-panel-post">

    <%- include("../../../layouts-admin/sidebar") %>
    <main class="admin-panel__main">

        <%- include("../../../layouts-admin/header") %>

        <div class="page-inner">

            <form action="/admin/press-center/tenders/add" method="post">

                <h2 class="admin-panel__main__content__text">Tender qo'shish</h2>
                <input type="hidden" name="type" value="TENDERS">

                <input type="text" hidden value="" name="contentAttachments" class="content-attachments">

                <label class="admin-page-inner__label">
                    O'zbek tilidagi tender
                    <input class="admin-page-inner__input " name="titleUz" type="text"
                           required
                           oninvalid="this.setCustomValidity(`Sarlavha kiritish majburiy!`)"
                           oninput="this.setCustomValidity('')"

                    />
                    <textarea id="myTextarea" name="textUz"
                    ></textarea>
                </label>
                <% if(errors?.length > 0){ %> <% for(let i = 0;i < errors.length;i++){
                %> <% let err = ""; if (errors[i].includes("Sarlavha" || "Maqola")) err =
                        errors[i] %>
                <p class="error-message"><%= err %></p>
                <% } } %>
                <label class="admin-page-inner__label ">
                    Тендер на русском
                    <input name="titleRu" type="text" class="admin-page-inner__input"
                           required
                           oninvalid="this.setCustomValidity(`Sarlavha kiritish majburiy!`)"
                           oninput="this.setCustomValidity('')"
                    />

                    <textarea id="myTextarea" name="textRu"

                    ></textarea>
                </label>
                <% if(errors?.length > 0){ %> <% for(let i = 0;i < errors.length;i++){
                %> <% let err = ""; if (errors[i].includes("Добавьте" || "Добавьте")) err =
                        errors[i] %>
                <p class="error-message"><%= err %></p>
                <% } } %>
                <label class="admin-page-inner__label">
                    Tender in english
                    <input name="titleEn" type="text" class="admin-page-inner__input"
                           required
                           oninvalid="this.setCustomValidity(`Sarlavha kiritish majburiy!`)"
                           oninput="this.setCustomValidity('')"
                    />

                    <textarea id="myTextarea" name="textEn"
                    ></textarea>
                </label>

                <% if(errors?.length > 0){ %> <% for(let i = 0;i < errors.length;i++){
                %> <% let err = ""; if (errors[i].includes("Title" || "Text")) err =
                        errors[i] %>
                <p class="error-message"><%= err %></p>
                <% } } %>
                <p class="svg-text mt-20">Tenderga fayl biriktirish</p>
                <button type="button" class="file-input-hidden-btn cancel-btn hidden">X</button>
                <label class="file-input-label">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-10 h-10 svg-file">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"></path>
                    </svg>


                    <svg class="w-6 h-6 file-input hidden" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
                    </svg>


                    <input type="file" hidden class="press-center-file" value=''/>

                </label>

                <input type="text" hidden class="hidden-input-file" name="fileId" value=''/>

                <div class="page-inner__btns">
                    <a class="btn admin-page-inner__btns__cancel" href="/admin/press-center/tenders/?page=1&size=6">Bekor
                        qilish</a>

                    <button type="submit" class="btn admin-page-inner__btns__save">Saqlash</button>
                </div>
            </form>
        </div>
    </main>
</div>


<!--//////////////////////////////////////-->
<script src="https://cdn.tiny.cloud/1/8gaiefqk6kkqws6okaw27xqwk113tyskyc15huaqpccbjclw/tinymce/6/tinymce.min.js"
        referrerpolicy="origin"></script>
<script src="/js/admin.js"></script>
<script type="text/javascript" src="/js/tinyMce.js">


<script type="text/javascript" src="/js/fileUploader.js"></script>

<script>

</script>


</body>
